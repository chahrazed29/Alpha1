<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backround3"
    tools:context=".EntrepriseActivity">

    <EditText
        android:id="@+id/editText8"
        android:layout_width="230dp"
        android:layout_height="40dp"

        android:layout_marginBottom="32dp"
        android:alpha="0.4"
        android:background="@drawable/input_field"
        android:cursorVisible="true"


        android:ems="10"
        android:hint="Nom Entreprise"

        android:inputType="textPersonName"
        android:textColor="#0A0A0A"
        android:textColorHighlight="#3E000000"
        android:textColorLink="@color/white"
        android:textCursorDrawable="@drawable/input_field"
        android:textIsSelectable="true"
        app:layout_constraintBottom_toTopOf="@+id/editText10"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <EditText
        android:id="@+id/editText10"
        android:layout_width="230dp"
        android:layout_height="40dp"

        android:layout_marginBottom="32dp"
        android:alpha="0.4"
        android:background="@drawable/input_field"

        android:cursorVisible="true"
        android:ems="10"
        android:hint="N registre de commerce"
        android:inputType="number"
        android:textColor="#0A0A0A"
        android:textColorHighlight="#3E000000"
        android:textColorLink="@color/white"


        android:textCursorDrawable="@drawable/input_field"
        android:textIsSelectable="true"
        app:layout_constraintBottom_toTopOf="@+id/editText11"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/editText11"
        android:layout_width="230dp"
        android:layout_height="40dp"
        android:layout_marginBottom="32dp"

        android:alpha="0.4"
        android:background="@drawable/input_field"
        android:cursorVisible="true"
        android:ems="10"

        android:hint="Email"
        android:inputType="textEmailAddress"
        android:textColor="#0A0A0A"
        android:textColorHighlight="#3E000000"


        android:textColorLink="@color/white"


        android:textCursorDrawable="@drawable/input_field"
        android:textIsSelectable="true"
        app:layout_constraintBottom_toTopOf="@+id/editText12"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/editText12"
        android:layout_width="230dp"
        android:layout_height="40dp"
        android:layout_marginBottom="32dp"


        android:alpha="0.4"
        android:background="@drawable/input_field"
        android:cursorVisible="true"
        android:ems="10"

        android:hint="TÃ©lephone"
        android:inputType="phone"

        android:textColor="#0A0A0A"
        android:textColorHighlight="#75000000"
        android:textColorLink="@color/white"
        android:textCursorDrawable="@drawable/button"
        android:textIsSelectable="true"
        app:layout_constraintBottom_toTopOf="@+id/editText13"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/editText13"
        android:layout_width="230dp"
        android:layout_height="40dp"
        android:layout_marginBottom="32dp"
        android:alpha="0.4"
        android:background="@drawable/input_field"
        android:cursorVisible="true"
        android:ems="10"
        android:hint="Mot de passe"
        android:inputType="textPassword"
        android:textColor="#0A0A0A"
        android:textColorHighlight="#3E000000"
        android:textColorLink="@color/white"
        android:textCursorDrawable="@drawable/input_field"
        android:textIsSelectable="false"
        app:layout_constraintBottom_toTopOf="@+id/button3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/button3"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:background="@drawable/button2"
        android:text="S'inscrire"
        android:textSize="19dp"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:fontFamily="@font/regular"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/backbtn2"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="6dp"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="6dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/retoure" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="340dp"
        android:layout_height="164dp"
        android:layout_marginTop="40dp"
        app:layout_constraintBottom_toTopOf="@+id/editText8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/logoandname" />

</androidx.constraintlayout.widget.ConstraintLayout>